<article>
  <header>
    <h2 class="page-title"><%= "Recipes that include #{ @ingredient }." %> </h2>
  </header>

  <ul class="row small-up-3 no-bullet">
    <% @recipes.each do | recipe | %>
      <% uri_section = recipe.uri.split("_").last %>
      <li class="column">
        <p><%= link_to(image_tag(recipe.image), recipes_show_path(uri_section)) %></p>
        <p><%= link_to recipe.label, recipes_show_path(uri_section) %></p>
      <% end %>
      </li>
  </ul>

<%= will_paginate @recipes, :page_links => true%>

