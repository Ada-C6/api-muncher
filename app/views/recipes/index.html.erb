<section>
  <div class="row small-up-2  medium-up-2 medium-centered large-up-4">
    <% @data.map do |item| %>
    <div class="column">
      <ul>
        <li><%= link_to image_tag(item.image), recipe_path(item.uri) %></li>
        <li><%= link_to item.label, recipe_path(item.uri) %></li>
      </ul>
    </div>
    <% end %>
  </div>
</section>
