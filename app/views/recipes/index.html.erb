
<main>
  <section>
    <ul>
      <li> <%= load_previous_recipes(@keyword, @page, class: 'prev-link') %> </li>
      <li>  <%= load_next_recipes(@recipes, @keyword, @page, class: 'next-link') %> </li>
    </ul>
  </section>

  <ul class='small-up-5'>
    <% @recipes.each do |recipe|  %>
    <li class='column recipe-tile'><%= link_to recipe_path(recipe.id) do %>
      <ul>
        <li>
          <%= image_tag recipe.image, class: 'recipe-picture' %>
        </li>
        <li>
          <h2 class='recipe-label'><%= recipe.label %></h2>
        </li>
      </ul>
      <% end  %>
    </li>
    <% end  %>
  </ul>

  <section class='row small-up-1 medium-up-2 large-up-2'>
    <%= load_previous_recipes(@keyword, @page, class: 'column') %>
    <%= load_next_recipes(@recipes, @keyword, @page, class: 'column') %>
  </section>
</main>
