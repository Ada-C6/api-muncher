
<article>
  <% if @recipes != nil %>
    <% listing = 1 %>
    <section class="row">
      <div class="medium-1 columns">
      </div>
    <% @recipes.each do |recipe| %>
      <div class="small-12 medium-3 end columns results">
        <%= "#{listing}" %>
        <p><%= link_to(image_tag(recipe.image), image_path(recipe_path(recipe.uri)) ) %></p>
        <p><%= link_to "#{recipe.title}", recipe_path(recipe.uri) %></p>
      </div>
        <% listing +=1 %>
    <% end %>
  </section>
  <% end %>
</article>
