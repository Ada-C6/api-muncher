<section class="page-name row">
  <h1 class="column">Recipe Results</h1>
</section>
<section class="search-query row">
  <h3 class="column"><%= "#{@count} recipes matching '#{@search_term}'" %>:</h3>
</section>

<ul class="row small-up-1 medium-up-3 large-up-4">
  <% @results.each do |recipe| %>
    <li class="column">
      <%= link_to recipe_path(recipe.uri) do %>
        <%= image_tag "#{recipe.image_url}", alt: "#{recipe.label} Image" %>
      <% end %>
      <%= link_to recipe.label, recipe_path(recipe.uri) %>
    </li>
  <% end %>
</ul>

<%= @page.to_s + " of " + @pages.to_s + " pages" %>
  <%# link_to "#{i}", recipes_path(page: i, search: @search_term )%>
<%# end %>
