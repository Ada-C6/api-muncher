
<article>
  <% if @recipes != nil %>
    <% listing = 1 %>
    <% @recipes.each do |recipe| %>
      <section class="row">
      <div class="small-3 columns large-3 columns">
        <%= "#{listing}" %>
        <p><%= link_to(image_tag(recipe.image), image_path(recipe_path(recipe)) ) %></p>
        <%= link_to "#{recipe.title}", link_selector(recipe) %>
      </div>
        <% listing +=1 %>
      </section>
    <% end %>
  <% end %>
</article>
<p>
  This is the recipes#index page
</p>
