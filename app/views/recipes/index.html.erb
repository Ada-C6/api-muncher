<section class="light-green">
<% if @recipes %>
  <ul class='row small-up-3 medium-up-6'>
  <li class="column"><%= link_to "New search", recipes_index_path(0), class: "button" %></li>

  <% if @recipes.empty? %>
    <% if params[:startindex] == "0" %>
      <p>Sorry, no such recipes were found.</p>
    <% else %>
      <p>No more recipes for "<%= params[:search] %>" exist.</p>
    <% end %>
  <% else %>
    <% if params[:startindex].to_i >= 10 %>
      <li class="column">
        <%= link_to "Previous ten results", "#{URI.encode(@back_query_string)}", class: "button" %>
      </li>
    <% end %>
    <li class="column">
      <%= link_to "Next ten results", "#{URI.encode(@query_string)}", class: "button" %>
    </li>
  </ul>
  <h3 class="left-space-needed">You searched for "<%= params[:search] %>". Here are your results:</h3>

    <ul class='row small-up-3'>
      <% @recipes.each do |recipe| %>
        <li class="column" >
          <ul class="row small-up-1 recipe-row">
            <% id = recipe.uri.split("edamam.owl#").last %>
            <li class="column">
              <%=link_to image_tag(recipe.image), recipes_show_path(id)%>
            </li>

            <li class="column text-center">
              <%= link_to "#{recipe.label}", recipes_show_path(id) %>
            </li>
          </ul>
        </li>
      <% end %>
    </ul>
  <% end %>

<% else %>
  <p>
  <%= form_tag(recipes_index_path, :method => "get", id: "search-form", class: "left-space-needed", id: "search-box") do %>
  <%= text_field_tag :search, "" %>
      <%= submit_tag "Search", :name => "nil", class: "button" %>
  <% end %>
  </p>
  <p class="left-space-needed">
    Enter a search term above to start looking at recipes!
  </p>
<% end %>
</section>
