<% unless @results == nil %>
  <% @results.each do |recipe| %>
    <article>
      <ul>
        <li><%= link_to recipe.label, recipe.url, target: "_blank" %></li>
        <li>show <%= link_to recipe.label, show_path(recipe.search_term, recipe.hit_num, recipe.hit_num), target: "_blank" %></li>
      </ul>
    </article>
  <% end %>
<% end %>

<h1>Recipe Search</h1>


  <div class="row small-up-1 medium-up-2 large-up-4">
    <h3 class="headline">Find a Recipe</h3>
      <%= form_tag(search_path(), :method => "get") do %>
        <%= search_field_tag("query", nil, :placeholder => "Recipe Keyword")%>
        <%= submit_tag "Search", :name => nil, class: 'button' %>
      <% end %>
  </div>

