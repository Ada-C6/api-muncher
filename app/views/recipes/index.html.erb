
<div id="search_box">
<%= form_tag(root_path, method: "get") do %>
  <!-- <%= label_tag(:q, "Search for:") %> -->
  <%= text_field_tag(:q, placeholder= "What are you craving?")%>
  <%= submit_tag("Search", name: nil, class:"success button") %>
<% end %>
</div>

<% if @data %>
  <div class="row">
  <% @data.each do |recipe| %>
    <div class="small-12 medium-6 large-4 columns">
      <img src="<%= recipe.image %>"/>
      <p><%= link_to recipe.name, recipe_path(recipe.name, request.parameters.merge({:uri => recipe.uri})) %></p>
    </div>
  <% end %>
  </div>
  <%= paginate @data %>
<% end %>
