<article class="row">
<h1 class="large-11 small-centered columns"> Recipe for <%= "#{@recipe.name}" %> </h1>
<section class="row small-up-1 medium-up-2">
  <%= image_tag "#{ @recipe.photo}" %>
<ul class="recipe-info column">
  <li> <h4>Ingredients: </h4></li>
  <% @recipe.ingredients.each do |ingredient| %>
  <li><%= ingredient %> </li>


<% end %>
<li>Dietary notes: <% @recipe.dietary_labels.each do |label| %>
<%= label %>,
<% end %>
</li>
<li><b> View Original Recipe for
<%= link_to "#{@recipe.name}",  @recipe.url, :target => "_blank" %>  </b></li>
</ul>

</section>

</article>
