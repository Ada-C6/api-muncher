
<h1><%= @recipe.name %></h1>
<img src="<%= @recipe.image %>">
<p><%= link_to "Source Recipe", @recipe.url, :target => "_blank" %></p>
<h3>Ingredients</h3>
<ul>
  <% @recipe.ingredients.each do |ingredient| %>
    <li><%= ingredient %></li>
  <% end %>
</ul>
<h3>Dietary Information</h3>
<ul>
  <% @recipe.dietinfo.each do |dietlabel| %>
    <li><%= dietlabel %></li>
  <% end %>
</ul>
