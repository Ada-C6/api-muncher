<button onclick="history.back(1)">Back to Search Results</button>

<% if !@user.nil? %>
  <%= button_to "Save as Favorite", {controller: 'recipes', action: 'create', user_id: @user.id, name: @recipe[:name], link: @recipe[:link], image: @recipe[:image], ingredients: @recipe[:ingredients], diet: @recipe[:diet]}, method: :post %>
<% else %>
  <%= button_to "Save as Favorite", new_session_path, method: :get %>
<% end %>


<h1><%= link_to @recipe[:name], @recipe[:link], target: '_blank' %></h1>
<%= image_tag @recipe[:image] %>

<ul>
  <h3>Ingredients</h3>
  <% @recipe[:ingredients].each do |ingredient| %>
    <li><%= ingredient %></li>
  <% end %>
</ul>


<ul>
  <h3>Diet Labels</h3>
  <% @recipe[:diet].each do |diet| %>
    <li><%= diet %></li>
  <% end %>
</ul>
