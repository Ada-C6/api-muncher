<main>

<h3 class="search-term-styling"><%= link_to @recipe.first["label"].upcase, @recipe.first["url"], target: "_blank" %></h2>
<p> <%="Favorite" if @recipe.first[:bookmarked] == true %> </p>

  <div class="row show-content">
    <%=  image_tag(@recipe.first["image"], alt: "photo of #{@recipe.first["label"]}", class: "columns small-12 medium-8 large-6")%>
    <div class="columns small-12 medium-4 large-6">
      <div class="row">
        <article class="columns small-12 medium-12 large-6">
          <h4 class="list-header">Ingredients: </h4>
          <ul class="no-decoration-list">
            <% @recipe.first["ingredientLines"].each do |ingredient| %>
              <li><p><%= ingredient %></p>  </li>
            <% end %>
          </ul>
        </article>
        <article class="columns small-12 medium-12 large-6">
          <h4 class="list-header"> Health Labels: </h4>
          <ul class="no-decoration-list">
            <% @recipe.first["healthLabels"].each do |health_label| %>
              <li><%= health_label %></li>
            <% end %>
          </ul>
        </article>
      </div>
    </div>
  </div>
</main>
