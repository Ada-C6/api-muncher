<section class="recipe-label">
  <h1 class=""><%= @recipe.label %></h1>
</section>
<section class="link-original">
  <p class=""><%= link_to "View Full Recipe", @recipe.url, target: "_blank" %></p>
</section>

<%= image_tag @recipe.image_url, alt: "#{@recipe} Image" %>

<section class="ingredients">
  <h4 class="">Ingredients:</h4>
  <ul class="ingredients ">
    <% @recipe.ingredients.each do |i| %>
      <li><%= i %></li>
    <% end %>
  </ul>
</section>

<section class="dietary-info">
  <%# @recipes.dietary_info %>
</section>
