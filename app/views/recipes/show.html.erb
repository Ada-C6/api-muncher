<article>
  <header>
    <h1 class="page-title text-center backgrnd-color-yellow"><%= @recipe.label %></h1>
  </header>

  <section>
    <div class="row add-padding margin bkgrnd-color-teal add-border">
      <p class="small-12 medium-6 columns"><%= image_tag(@recipe.image, class: "show-img-size rounded-edges") %></p>

      <div class="small-12 medium-6 columns bkgrnd-color-white show-info">

        <ul class="row small-up-12 no-bullet">
          <li class="column increase-font change-font padding-bot underline"><%= @recipe.label %></li>
          <li class="column padding-bot">See Full Recipe on: <%= link_to( @recipe.source_name, @recipe.sourceUrl, target: '_blank') %></li>
          <li class="column padding-bot dash-underline"><%= "Serves: #{ @yield }" %></li>

          <li class="column padding-bot">
            <% if @recipe.healthLabels != [] %>
              <p>Health Labels:</p>
              <%= @recipe.healthLabels %>
            <% end %>
          </li>

          <li class="column padding-bot add-padding">
            <p>Ingredients:</p>
            <ul class="no-bullet">
              <% @all_indgredients.each do | indgredient | %>
                <li><%= indgredient %></li>
              <% end %>
            </ul>
          </li>
        </ul>
      </div>


    </div>

    <div class="row">

    </div>
  </section>
</article>
