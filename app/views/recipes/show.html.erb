<section class="show-recipe">
  <h1><%= link_to "#{ @recipe.label }", "#{ @recipe.url }", :target => "_blank" %></h1>
  <%= render partial: "dietinfo" %>
  <section class="row">
    <section class="column small-4">
      <%= image_tag @recipe.image, alt: "Picture of dish" %>
    </section>
    <%= render partial: "ingredient" %>
  </section>

  <p>Calories: <%= @recipe.calories.to_i/10 %></p>
</section>
