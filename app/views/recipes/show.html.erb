<div id="show">
  <h1><%= @recipe.name %></h1>
  <img src="<%= @recipe.image %>">
  <p><%= link_to "Source Recipe", @recipe.url, :target => "_blank" %></p>
  <h3>Ingredients</h3>
  <ul>
    <% @recipe.ingredients.each do |ingredient| %>
      <li><%= ingredient %></li>
    <% end %>
  </ul>
  <h3>Dietary Information</h3>
  <ul>
    <% @recipe.dietinfo.each do |dietlabel| %>
      <li><%= dietlabel %></li>
    <% end %>
  </ul>

  <h3>Nutritional Information</h3>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Total Nutrients</th>
        <th>% Daily Value</th>
      </tr>
    </thead>
    <tbody>
      <% @recipe.nutrients.each do |nutrient| %>
        <tr>
          <td><%= nutrient["label"] %></td>
          <td><%= nutrient["total"].round(1)%> <%= nutrient["unit"]%></td>
          <td><%= nutrient["daily"] %>%</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
