<article class="">
  <div class="">
  <h1><%= link_to "#{@recipe.title}", @recipe.url %></h1>
  </div>
  <section>
    <p><%= link_to(image_tag(@recipe.image), image_path(recipe_path(@recipe.uri)) ) %></p>
    <div class="">
      <h3>Ingredients Needed:</h3>
      <% @recipe.ingredients.each do |ingred| %>
      <p><%= ingred %></p>
      <% end %>
    </div>
  </section>
  <section>
    <h3>Dietary Information:</h3>
    <p>
      <% @recipe.diet_info.each do |info| %>
        <%= info %>
      <% end %>
    </p>
  </section>
</article>

<p>
  This is the recipe#show page
</p>
