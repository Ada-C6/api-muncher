<article>
<h1> Recipe for <%= "#{@recipe.name}" %> </h1>
<section>
  <%= image_tag "#{ @recipe.photo}" %>
<ul>
  <li><h4>Ingredients: </h4></li>
  <% @recipe.ingredients.each do |ingredient| %>
  <li><%= ingredient %> </li>


<% end %>
<li>Dietary notes: <% @recipe.dietary_labels.each do |label| %>
<%= label %>,
<% end %>
</li>
<li><b> View Original Recipe for
<%= link_to "#{@recipe.name}",  @recipe.url, :target => "_blank" %>  </b></li>
</ul>

</section>

</article>
