<button onclick="history.back(1)" class="button third-font small-4 medium-2 large-1 columns">Go Back</button>
<h3 class="small-12 medium-10 columns third-font"><%= @recipe.recipe_name %></h3>
<p class="small-12 columns second-font">
  <%= link_to("Original recipe",@recipe.url, :target => "_blank") %>
</p>
<p class="image small-12 medium-4 large-4 columns">
  <%= image_tag(@recipe.image, class:"image") %>
</p>


<div class="small-8 medium-6 large-6 columns first-font">
  <p class="second-font">Ingredients:</p>
  <ul><% @recipe.ingredients.each do |ingredient| %>
    <li><%= ingredient %></li>
  <% end %>
  </ul>
  <p></p>
</div>

<div class="small-4 medium-2 large-2 columns first-font">
  <p class="second-font">Diet:</p>
  <% @recipe.diet_labels.each do |diet| %>
    <p><%= diet %></p>
  <% end %>
  <% @recipe.health_labels.each do |label| %>
    <p><%= label %></p>
  <% end %><p></p>
</div>
