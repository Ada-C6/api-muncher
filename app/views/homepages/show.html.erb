<%= render partial: 'header' %>

<div class="row">
  <div class="medium-8 columns medium-centered">
    <div class='row'>
      <section class='medium-6 large-4 columns'>
        <%= image_tag(@recipe.image, class: 'recipe-image single-image') %>
      </section>

      <section class='medium-6 large-8 columns'>
        <h3 class='recipe-fancy'><%= @recipe.label %></h3>
        <p><%= "Yield: #{@recipe.yield} servings" %></p>
        <p><%= link_to("See directions on #{@recipe.source}", @recipe.url, target: 'blank') %></p>
      </section>
    </div> <!--  the row inside the columns inside the meta-row -->
  </div><!-- beginning of the columns within the meta-row -->
</div><!-- beginning of the meta-row -->

<div class="row">
  <div class="medium-10 columns medium-centered">
    <div class='row'>
      <section class='medium-6 columns'>
        <h5 class='recipe-fancy'><%= "Ingredients" %></h5>
        <ul>
          <% @recipe.ingredient_list.each do |ingredient| %>
            <li class='not-inline'><%= ingredient %></li>
          <% end %>
        </ul>
      </section>

      <section class='medium-6 columns'>
        <h5 class='recipe-fancy'><%= "Heath information" %></h5>
        <ul>
          <% @recipe.diet_labels.each do |diet_label| %>
            <li class='not-inline'><%= diet_label %></li>
          <% end %>
          <% @recipe.health_labels.each do |health_label| %>
            <li class='not-inline'><%= health_label %></li>
          <% end %>
        </ul>
      </section>
    </div>
  </div><!-- beginning of the columns within the meta-row -->
</div><!-- beginning of the meta-row -->

</article>
