<body class="result_body">
  <% @recipes.each do |recipe| %>
    <div class="small-12 medium-4 large-4 columns">
      <article class="recipe_box">
        <%= link_to image_tag(recipe.image, :class=>'recipe_photo'), show_path(:uri => recipe.uri) %>
        <p><%= link_to recipe.label, show_path(:uri => recipe.uri) %></p>
      </article>
    </div>
    <!-- <p><%#= link_to "Details", show_path(:uri => recipe.uri) %></p> -->
  <% end %>

  <%= render :partial => 'pagination', :locals => {
    :term => @term,
    :count => @count,
    :more => @more } %>
</body>
