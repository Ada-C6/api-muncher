<section>
  <h1>YOUR RESULTS</h1>
  <h4> based on your search of: <%= @keyword %></section</h4>
<section>

<section>
    <h5 class="flash"><%= flash[:error] %></h5>
</section>

<section>
  <% if @page > 1%>
    <h5><%= link_to "Previous", search_recipes_path(search: params[:search], page: @page - 1), class:"search-button" %></h5>
  <% end %>
  <% if @page < @last_page %>
    <h5><%= link_to "Next", search_recipes_path(search: params[:search], page: @page + 1), class:"search-button" %></h5>
  <% end %>
</section>

<section>
  <ul class="row small-up-1 medium-up-2 large-up-3 no-bullets" >
    <% @searched.each do |recipe| %>
      <li class="column"><%= link_to "#{image_tag(recipe.photo)}".html_safe, show_recipe_path(recipe.id)%>
      <p><%= link_to recipe.label, show_recipe_path(uri), class:"recipe-button" %></p><li>
    <% end %>

  </ul>
</section>
