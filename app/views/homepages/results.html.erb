<div class="row small-up-1 medium-up-2 large-up-3">
  <% @recipes.each do |recipe|  %>
  <article class="column">
    <%=link_to image_tag(recipe.image, :alt => "recipe photo", :title => recipe.label), show_page_path(recipe.uri) %>
    <h3><%= recipe.label  %></h3>
  </article>
  <% end %>
</div>

<%= link_to "More Results", more_results_path(params[:search_term], params[:from])%>
