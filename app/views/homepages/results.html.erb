<h1 class="center-text">Recipe Search Results</h1>

<div class="row small-up-1 medium-up-2 large-up-3">
  <% @recipes.each do |recipe|  %>
  <article class="column center-text">
    <%=link_to image_tag(recipe.image, :alt => "recipe photo", :title => recipe.label), show_page_path(recipe.uri) %>
    <h5><%= recipe.label  %></h5>
  </article>
  <% end %>
</div>
<div class="center-text">
  <%= button_to("More Results", more_results_path(params[:search_term], params[:from]), method: :get, :class => "button")%>
</div>
