<!DOCTYPE html>
<html>
  <head>
    <title>ApiMuncher</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

  <section>
  <h1>Om Nom Nom Nom Finder</h1>
    <div>
      <%= form_tag(search_path, method: :get) do %>
        <div class="row">
          <div class="column small-2"></div>
          <div class="column small-8"><%= text_field_tag(:q) %></div>
          <div class="column small-2"></div>
        </div>
        <div class="row"><%= submit_tag "Go Nom Nom", class: "button" %></div>
      <% end %>
    </div>
  <section>


  <footer class="footer">
    <%= image_tag "Attibution-v1.png", :title => "Edamam Attribution", :alt => "Edamam Attribution" %>
  </footer>
  </body>
</html>
