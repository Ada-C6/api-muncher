<%= render partial: 'header' %>

<h4><%= @message %></h4>

<% @recipes.each do |recipe| %>
  <ul>
    <li><%= link_to( image_tag(recipe.image, {class: 'recipe-image', title: recipe.label}), show_recipe_path(recipe.label, params: {id: recipe.id}))%></li>
    <li><%= link_to(recipe.label, show_recipe_path(recipe.label, params: {id: recipe.id})) %></li>
  </ul>
<% end %>
