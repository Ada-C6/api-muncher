<h1>Search Recipe </h1>

<%= form_tag search_path, method: "post" do %>
  <%= label_tag "Search" %>
  <%= text_field_tag :term %>

  <p><%= label_tag "Peanut Free" %>
  <%= check_box_tag :is_peanut_free %></p>

  <p><%= label_tag "High Protein" %>
  <%= check_box_tag :is_high_protein %></p>

  <p><%= label_tag "Gluten Free" %>
  <%= check_box_tag :is_gluten_free %></p>

  <%= submit_tag "Search", :class => "button" %>
<% end %>
