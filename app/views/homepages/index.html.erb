<h4>Search for recipes using the toolbar below</h4>

<section>
    <h5 class="flash"><%= flash[:notice] %></h5>
</section>

<section>
  <%= form_tag(search_recipes_path, method: :get) do %>
    <p class="search-bar">
      <%= text_field_tag :search, params[:search]%>
      <%= submit_tag "Search", :name => nil%>
    </p>
  <% end %>
</section>
