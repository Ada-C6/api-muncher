<h1>Here are your results...</h1>

<h2>Click on a link to see the recipe.</h2>
<% if flash[:notice] %>
  <h3 class="flash-notice"><%= flash[:notice] %></h3>
<% end %>

<section class="row">
<% sections = ['<section class="small-12 medium-6 large-4  columns">', '<section class="small-12 medium-6 large-4  columns">', '<section class="small-12 medium-12 large-4  columns">'] %>
<table>
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <th><%= link_to( image_tag ( recipe.image )) %></th>
        <th><%= link_to( recipe.recipe_name, show_path(recipe.recipe_name) ) %></th>
      </tr>
    <% end %>
  </tbody>
</table>
</section>
