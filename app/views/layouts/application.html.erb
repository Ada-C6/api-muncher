<!DOCTYPE html>
<html>
<head>
  <title>Sky Sky Binks Food Eats</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <section class="top-bar" id="main-header">
      <nav class="top-bar-section">
        <ul class="menu top-bar-left">
          <h1><%= link_to("Sky Sky Binks Food Eats", root_path) %></h1>
        </ul>
        <ul class="menu top-bar-right">
          <li>
            <%= form_tag recipes_path, method: :get do %>
              <%= label_tag :keyword, "Key Word:" %>
              <%= text_field_tag :search_term, params[:search_term] %>
              <%= submit_tag "Find Recipe", class: "button" %>
            <% end %>
          </li>
        </ul>
      </nav>
    </section>
  </header>

  <%= yield %>

  <footer>
    <span>Powered by:</span><%= image_tag("edamam-logo.png", class: "logo") %>
  </footer>
</body>
</html>
