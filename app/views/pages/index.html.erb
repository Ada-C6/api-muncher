<h1>RECIPES</h1>

<section class="row">
  <% sections = ['<section class="small-12 medium-6 large-4 columns">', '<section class="small-12 medium-6 large-4 columns">', '<section class="small-12 medium-12 large-4 columns">'] %>

  <% counter = 0 %>
  <% max = @ingredient.length / 3 + 1  %>
  <% @ingredient.each do |ingredient| %>
    <% if counter % max == 0 %>
      <%= sections[counter / max].html_safe %>
      <ul>
    <% end %>
  <% counter += 1 %>
  <li><%= link_to ingredient.label, pages_path(ingredient.label) %></li>
  <% if counter % max == 0 %>
    </ul>
    </section>
  <% end %>
<% end %>
  <% if counter % max != 0 %>
   </ul>
 </section>
<% end %>

</section>
