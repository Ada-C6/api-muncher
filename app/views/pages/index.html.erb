<h1>Recipes</h1>

<h2>Click on a link to see recipe details.</h2>
<section class="row">
<% sections = ['<section class="small-12 medium-6 large-4  columns">',
                '<section class="small-12 medium-6 large-4  columns">',
                '<section class="small-12 medium-12 large-4  columns">'] %>

<% counter = 0 %>
<% max = @recipes.length / 3 + 1  %>
<% @recipes.each do |recipe| %>
  <% if counter % max == 0 %>
    <%= sections[counter / max].html_safe %>
    <ul>
  <% end %>
  <% counter += 1 %>
  <li>   <%= link_to recipe.label, pages_path(recipe.label) %> </li>

  <% if counter % max == 0 %>
    </ul>
    </section>
  <% end %>
<% end %>
  <% if counter % max != 0 %>
   </ul>
 </section>
<% end %>

</section>
