
<% if @user.nil? %>
  <%= link_to "Login", new_session_path %>
<% else %>
  <div class="row small-up-2 medium-up-3 large-up-4">

  <% @user.recipes.each do |recipe| %>
  <div class="column">
    <ul>
      <li><%= button_to "Remove from favorites", {controller: 'recipes', action: 'destroy', id: recipe.id}, method: :delete, class:"button favorites" %></li>
      <li><%= link_to (image_tag recipe.image), recipe[:link], target:'_black' %></li>
      <li class="recipe-name"><%= link_to recipe[:name], recipe[:link], target: '_blank' %></li>

    </ul>
  </div>

  <% end %>
<% end %>
</div>
