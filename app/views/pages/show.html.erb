<header><nav class="head">
  <p class="fake-button"><%= link_to "Back to Search Results",  :back %></p>
</nav></header>

<h1 class="recipe">Recipe</h1>
<section class="small-4 medium-4 large-4 columns show-page">
  <% @individual_recipe.each do |r| %>
  <h5><strong><%= r.label %></strong></h5>
  <br>
  <img src="<%= r.image %>" alt="image of individual recipe" />
  <p><%= link_to "Original Recipe", r.url, :target => "_blank" %></p>
  <h5><strong>Serves: </strong><%= r.yield.to_i %></h5>
</section>
<section class="small-4 medium-4 large-4 columns show-page">
  <ul><p><strong>Ingredients:</strong></p>
    <% r.ingredientLines.each do |element| %>
    <li><%= element %></li>
    <% end %>
  </ul>
</section>
<section class="small-4 medium-4 large-4 columns show-page">
  <% if r.cautions.length > 0 %>
    <ul><strong>Cautions:</strong>
      <% r.cautions.each do |element| %>
        <li><%= element %></li>
      <% end %>
    <% end %>
    </ul>
    <p><% if r.dietLabels.length > 0 %>
      <ul><strong>Dietary Info:</strong>
        <% r.dietLabels.each do |element| %>
        <li><%= element %></li>
        <% end %>
      </ul>
    <% end %>
    <p><% if r.healthLabels.length > 0 %>
      <ul><p><strong>Health Info:</strong></p>
      <% r.healthLabels.each do |element| %>
        <li><%= element %></li>
      <% end %>
    <% end %></ul></p>
  <% end %>
</section>
<section class="copyright small-12 medium-12 large-12 columns">&copy; Poodles are awesome!
<p>API thanks to: Edamam Recipe Search.</p></section>
