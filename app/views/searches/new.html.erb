<% if flash[:error] %>
<%= flash[:error] %>
<% end %>

<% if flash[:notice] %>
<%= flash[:notice] %>
<% end %>

<h1>Search</h1>
<%= form_tag searches_path, method: :get do %>
  <%= label_tag :search_term, "Search Terms" %>
  <%= text_field_tag :search_term %>
  <%= submit_tag "Search", class: "button" %>
<% end %>
