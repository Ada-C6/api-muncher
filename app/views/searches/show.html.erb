<%= render partial: 'layouts/header' %>
<main class="row recipe-page">
  <article class="recipe-info column small-10 small-centered">
    <h1><%= @recipe.title %></h1>
    <h4> recipe from: <%= link_to @recipe.source_name, @recipe.recipe_url %></h4>
    <section class="recipe-image-section small-12 medium-6 columns">
      <div class="recipe-image row small-1-up">
      <%= image_tag @recipe.image_url, class: "column" %>
      <h3 class="column">
        <%= link_to "see it at #{@recipe.source_name}", @recipe.recipe_url, class: "link-on-black" %>
      </h3>
      <!-- <section class="recipe-diet-info small-12 medium-6 columns end"> -->
      <!-- <span>Diets:</span>
      <% @recipe.health_and_diet_labels.each do |label| %>
      <span class#"secondary label" >
        <%# label %>
      </span>
      <% end %> -->
      <!-- </section> -->
      </div>
      <section class="recipe-diet-info">
        <span>Diets:</span>
        <% @recipe.health_and_diet_labels.each do |label| %>
        <span class="secondary label" >
          <%= label %>
        </span>
        <% end %>
      </section>
    </section>
    <section class="recipe-ingredients small-12 medium-6 columns">
      <!-- <h3>Ingredients</h3> -->
      <table>
        <thead>
          <tr>
            <th>
              <h3>Ingredients</h3>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @ingredients.each do |ingredient| %>
            <tr>
              <td>
                <li>
                  <%= ingredient %>
                </li>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </section>
  </article>
</main>
